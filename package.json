{
  "name": "@dlghq/dialog-api",
  "version": "1.8.12",
  "description": "dialog messenger api",
  "main": "js/index.js",
  "files": [
    "js",
    "proto",
    "include"
  ],
  "scripts": {
    "prepare": "node scripts/build.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dialogs/api-schema.git"
  },
  "author": "Nikita Gusakov <nkt@dlg.im>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/dialogs/api-schema/issues"
  },
  "homepage": "https://dialogs.github.io/api-schema",
  "peerDependencies": {
    "grpc": "^1.15.1"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "protobufjs": "^6.8.8"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "6.3.0",
    "@semantic-release/exec": "3.3.7",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/github": "5.5.3",
    "@semantic-release/npm": "5.2.0",
    "@semantic-release/release-notes-generator": "7.3.0",
    "mkdirp": "0.5.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "npm version --no-git-tag ${nextRelease.version}"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "npx podspec-bump -w ${nextRelease.version}"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "git add package.json package-lock.json DialogSDK-GRPC.podspec"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "git commit -m \"chore(release): ${nextRelease.version}\n\n${nextRelease.notes}\""
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "git tag -a v${nextRelease.version} -m \"${nextRelease.notes}\""
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "git push --follow-tags"
        }
      ]
    ]
  }
}
